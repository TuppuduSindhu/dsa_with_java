day 28/10/25
leetcode prbm 2744 
You want to count how many pairs of strings in a given array are reverses of each other.
code  works perfectly when you input an array of strings directly (like ["ab", "ba", "cd", "dc"]).
import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in); 
        String[] words = new String[n]; // we are taking string array
        for (int i = 0; i < n; i++) {
            words[i] = sc.next();//taking input 
        }
        
        int result = maxStringPairs(words);
        System.out.println(result);
        
        sc.close();
    }
//in this maxstringpairs methodwe compare the adjacent reverse strings 
    public static int maxStringPairs(String[] words) {
        int n = words.length;
        int ans = 0;
        for (int i = 0; i < n - 1; i++) {
            for (int j = i + 1; j < n; j++) {
                String a = words[i];
                String b = words[j];
                if(a.equals("0"){
                  break;
                  }
                String revb = reverse(b);
                if (revb.equals(a)) {
                    ans++;
                    words[j]="0";
                    break;
                }
            }
        }
        return ans;
    }
//we will take the string reverse function to reverse the string 
    public static String reverse(String s) {
        String rev = "";
        for (int i = s.length() - 1; i >= 0; i--) {
            rev += s.charAt(i);
        }
        return rev;
    }
}

