code:


class Main {
    public static void main(String[] args) {
        int[][] arr={{1,2},{2,3},{3,4}};
        int r=arr.length;
        int c=arr[0].length;
        for(int i=0;i<r;i++){
            for(int j=0;j<c;j++){
                System.out.println(arr[i][j] );
            }
        }
    }
}


